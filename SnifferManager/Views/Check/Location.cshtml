@model List<SnifferManager.Models.ViewModel.CheckLocationViewModel>

<table class="table">
    <thead>
        <tr>
            <th>Номер чека</th>
            <th>Дата</th>
            <th>Позиций</th>
            <th>Сумма</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var check in Model)
        {
            <tr>
                @if (String.IsNullOrEmpty(check.CheckNumber))
                {
                    <td>@Html.ActionLink("--", "Detail", new { id = check.CheckId }) </td>
                }
                else
                {
                <td>@Html.ActionLink(check.CheckNumber, "Detail", new { id = check.CheckId }) </td>
                }
                <td>@check.Date</td>
                <td>@check.Position</td>
                <td>@check.Price</td>
            </tr>
        }
    </tbody>
</table>