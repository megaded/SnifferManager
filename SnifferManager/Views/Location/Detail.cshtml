@model SnifferManager.Models.ViewModel.LocationDetailViewModel

<script type="text/javascript">

     $(document).ready(function () {
         $('input[type=datetime]').datepicker({
             dateFormat: "dd/M/yy",
             changeMonth: true,
             changeYear: true,
             yearRange: "-60:+0"
         });

     });
</script>  

<div class="panel panel-primary">
    <div class="panel-heading">@Model.LocationName - @Model.LocatioId</div>
    <div class="panel-body">
        @using (Ajax.BeginForm("Sales",new AjaxOptions { UpdateTargetId="sales"}))
        {
            @Html.HiddenFor(x=>x.LocatioId)
         @Html.EditorFor(model => model.BeginDate, new { htmlAttributes = new { @class = "form-control", placeholder = "Начало периода" } })  
        @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control", placeholder = "Конец периода" } }) 
        <input type="submit" value="Выбрать"/>
        }
       <div id="sales">
       </div>
    </div>
</div>

